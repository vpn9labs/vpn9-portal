#!/bin/bash -e

echo "[docker-entrypoint] Starting with args: $@"

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Verify build integrity before proceeding
if [ -x "/rails/bin/verify-build-integrity" ]; then
  /rails/bin/verify-build-integrity
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  echo "[docker-entrypoint] Running database preparation..."
  ./bin/rails db:prepare || {
    echo "[docker-entrypoint] Database preparation failed with exit code $?"
    exit 1
  }
  echo "[docker-entrypoint] Database preparation completed"
fi

echo "[docker-entrypoint] Executing command: exec $@"
exec "${@}"
