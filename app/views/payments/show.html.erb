<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Complete Your Payment
      </h3>
      
      <div class="mt-5">
        <div class="rounded-md bg-blue-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3 flex-1 md:flex md:justify-between">
              <p class="text-sm text-blue-700">
                Send exactly <strong><%= @payment.crypto_amount %> <%= @payment.crypto_currency.upcase %></strong> to the address below
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="mt-5">
        <label class="block text-sm font-medium text-gray-700">
          Payment Address
        </label>
        <div class="mt-1 relative">
          <input type="text" 
                 id="payment-address"
                 readonly
                 value="<%= @payment.payment_address %>"
                 class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md bg-gray-50 font-mono">
          <button onclick="copyAddress()" 
                  class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5">
            <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </button>
        </div>
      </div>
      
      <div class="mt-5">
        <div class="flex items-center justify-center">
          <div class="bg-white p-4 border-2 border-gray-300 rounded">
            <div id="qrcode"></div>
          </div>
        </div>
      </div>
      
      <dl class="mt-5 grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Amount (Fiat)</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @payment.amount %> <%= @payment.currency %>
          </dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <span class="<%= payment_status_class(@payment.status) %>">
              <%= @payment.status.humanize %>
            </span>
          </dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Plan</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @payment.plan.name %>
          </dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Expires At</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @payment.expires_at.strftime("%B %d, %Y %I:%M %p") %>
          </dd>
        </div>
      </dl>
      
      <div class="mt-5">
        <div class="rounded-md bg-yellow-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">
                Important
              </h3>
              <div class="mt-2 text-sm text-yellow-700">
                <ul class="list-disc pl-5 space-y-1">
                  <li>Send the exact amount shown above</li>
                  <li>Payment will be confirmed after network confirmations</li>
                  <li>This page will automatically update when payment is received</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
<script>
  // Generate QR code
  new QRCode(document.getElementById("qrcode"), {
    text: "<%= @payment.crypto_currency %>:<%= @payment.payment_address %>?amount=<%= @payment.crypto_amount %>",
    width: 200,
    height: 200,
    colorDark : "#000000",
    colorLight : "#ffffff",
    correctLevel : QRCode.CorrectLevel.L
  });
  
  // Copy address function
  function copyAddress() {
    const addressInput = document.getElementById('payment-address');
    addressInput.select();
    addressInput.setSelectionRange(0, 99999);
    document.execCommand('copy');
    
    // Show feedback
    const button = event.currentTarget;
    const originalHTML = button.innerHTML;
    button.innerHTML = '<span class="text-green-600">Copied!</span>';
    setTimeout(() => {
      button.innerHTML = originalHTML;
    }, 2000);
  }
  
  // Auto-refresh page every 10 seconds if payment is pending
  <% if @payment.pending? %>
    setTimeout(() => {
      window.location.reload();
    }, 10000);
  <% end %>
</script>