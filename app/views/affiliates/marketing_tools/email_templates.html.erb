            <button onclick="copyTemplate('template-<%= index %>')" class="absolute top-2 right-2 px-3 py-1 text-sm bg-indigo-600 text-white rounded hover:bg-indigo-700">
              Copy Template
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow p-6 mt-6">
    <h3 class="text-lg font-semibold mb-4">Email Marketing Best Practices</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h4 class="font-medium text-gray-900 mb-2">Customization Tips</h4>
        <ul class="text-sm text-gray-600 space-y-1">
          <li>• Personalize the greeting with subscriber names</li>
          <li>• Add your own experiences with VPN9</li>
          <li>• Include relevant examples for your audience</li>
          <li>• Adjust the tone to match your brand voice</li>
        </ul>
      </div>
      <div>
        <h4 class="font-medium text-gray-900 mb-2">Sending Guidelines</h4>
        <ul class="text-sm text-gray-600 space-y-1">
          <li>• Send emails at optimal times (10am or 2pm)</li>
          <li>• Space out promotional emails appropriately</li>
          <li>• Segment your audience for better targeting</li>
          <li>• Always provide value, not just promotions</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
function copyTemplate(id) {
  const textarea = document.getElementById(id);
  navigator.clipboard.writeText(textarea.value).then(function() {
    alert('Template copied!');
  }, function(err) {
    console.error('Could not copy template: ', err);
  });
}

function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    alert('Copied!');
  }, function(err) {
    console.error('Could not copy text: ', err);
  });
}
</script>