<% content_for :title, "Join VPN9 Affiliate Program - Earn 20% Commission" %>
<% content_for :meta_tags do %>
  <meta name="description" content="Join the VPN9 affiliate program and earn commission on every referral. Promote privacy-focused VPN services with Bitcoin and Monero payment options. High conversion rates.">
  <meta name="keywords" content="VPN affiliate program, VPN9 partners, earn commission VPN, privacy VPN affiliate, Bitcoin VPN affiliate program, crypto affiliate program">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="https://vpn9.com/affiliates/new">
  
  <meta property="og:title" content="Join VPN9 Affiliate Program - Commission">
  <meta property="og:description" content="Partner with VPN9 and earn commission promoting the most privacy-focused VPN service. Join our growing network of affiliates.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://vpn9.com/affiliates/new">
<% end %>

<div class="bg-gray-50 py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="text-center text-3xl font-extrabold text-gray-900">
      Join Our Affiliate Program
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Earn commission on every successful referral
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-2xl">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with(model: @affiliate, local: true, html: { class: "space-y-6" }) do |form| %>
        <% if @affiliate.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <h3 class="text-sm font-medium text-red-800">
              There were <%= pluralize(@affiliate.errors.count, "error") %> with your submission:
            </h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @affiliate.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= form.email_field :email, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">Must be at least 8 characters</p>
          </div>

          <div>
            <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= form.password_field :password_confirmation, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :company_name, "Company Name (optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :company_name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :website, "Website (optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :website, placeholder: "https://", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :phone, "Phone (optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :phone, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :country, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :country, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= form.label :promotional_methods, "How do you plan to promote our service?", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :promotional_methods, rows: 4, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">E.g., blog, social media, email marketing, paid ads, etc.</p>
        </div>

        <div>
          <%= form.label :expected_referrals, "Expected monthly referrals", class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :expected_referrals, 
              options_for_select([
                ["1-10", 10],
                ["11-50", 50],
                ["51-100", 100],
                ["101-500", 500],
                ["500+", 1000]
              ]), 
              { prompt: "Select expected volume" },
              { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
        </div>

        <fieldset>
          <legend class="text-base font-medium text-gray-900">Payout Preferences</legend>
          <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <%= form.label :payout_currency, "Payout Method", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :payout_currency,
                  options_for_select([
                    ["Bitcoin (BTC)", "btc"],
                    ["Ethereum (ETH)", "eth"],
                    ["USDT", "usdt"],
                    ["Litecoin (LTC)", "ltc"],
                    ["Monero (XMR)", "xmr"],
                    ["Bank Transfer", "bank"],
                    ["Manual", "manual"]
                  ], "btc"),
                  {},
                  { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
            </div>

            <div>
              <%= form.label :payout_address, "Payout Address", class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :payout_address, required: true, placeholder: "Wallet address or account details", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
          </div>
        </fieldset>

        <div>
          <%= form.label :tax_id, "Tax ID (optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :tax_id, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-sm text-gray-500">Required for certain payout methods and jurisdictions</p>
        </div>

        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= form.check_box :terms_accepted, required: true, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
          </div>
          <div class="ml-3 text-sm">
            <%= form.label :terms_accepted do %>
              I agree to the <%= link_to "Affiliate Terms and Conditions", "#", class: "font-medium text-indigo-600 hover:text-indigo-500", target: "_blank" %>
            <% end %>
          </div>
        </div>

        <div>
          <%= form.submit "Join Affiliate Program", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Already have an account?</span>
          </div>
        </div>

        <div class="mt-6">
          <%= link_to "Sign in to your affiliate dashboard", login_affiliates_path, class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </div>
  </div>
</div>