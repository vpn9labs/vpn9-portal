<div class="min-h-screen bg-gray-50 flex flex-col py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="text-center text-3xl font-bold tracking-tight text-gray-900">Sign in to VPN9</h1>
    <p class="mt-2 text-center text-sm text-gray-600">
      Enter your passphrase to access your account
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      
      <% if flash[:alert] %>
        <div class="mb-4 rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= flash[:alert] %>
              </h3>
            </div>
          </div>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="mb-4 rounded-md bg-green-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">
                <%= flash[:notice] %>
              </h3>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_with url: session_path, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :passphrase, "Passphrase", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :passphrase, required: true, autofocus: true, 
                placeholder: "word-word-word-word-word-word-word", 
                class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm font-mono" %>
          </div>
          <p class="mt-2 text-xs text-gray-500">
            Your 7-word passphrase, separated by hyphens. If you set a custom password, append it after a colon (e.g., passphrase:password)
          </p>
        </div>

        <div>
          <%= form.label :email_address, "Email (optional)", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.email_field :email_address, 
                placeholder: "your@email.com", 
                class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            If you provided an email during signup, entering it here can help locate your account faster
          </p>
        </div>

        <div>
          <%= form.submit "Sign in", class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="rounded-md bg-blue-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">
                Privacy-First Authentication
              </h3>
              <div class="mt-2 text-sm text-blue-700">
                <p>VPN9 uses a single passphrase for authentication. No personal information required.</p>
                <p class="mt-1">Lost your passphrase? Use your recovery code or create a new account.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-6">
        <div class="text-center">
          <%= link_to "Forgot passphrase?", new_password_path, class: "text-sm text-indigo-600 hover:text-indigo-500 font-medium" %>
        </div>
      </div>
      
      <div class="mt-8">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="bg-white px-2 text-gray-500">Don't have an account?</span>
          </div>
        </div>

        <div class="mt-4">
          <%= link_to "Sign up", signup_path, class: "flex w-full justify-center rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
        </div>
      </div>
    </div>
  </div>
</div>