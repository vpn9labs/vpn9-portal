<div class="min-h-screen bg-gray-50 flex flex-col py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="text-center text-3xl font-bold tracking-tight text-gray-900">Recover Your Account</h1>
    <p class="mt-2 text-center text-sm text-gray-600">
      Use your email address or recovery code to reset your passphrase
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      
      <% if flash[:alert] %>
        <div class="mb-4 rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= flash[:alert] %>
              </h3>
            </div>
          </div>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="mb-4 rounded-md bg-green-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">
                <%= flash[:notice] %>
              </h3>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Recovery Method Tabs -->
      <div class="mb-6">
        <nav class="flex space-x-4" aria-label="Recovery methods">
          <button type="button" onclick="showRecoveryMethod('email')" id="email-tab" class="recovery-tab active rounded-md px-3 py-2 text-sm font-medium text-white bg-indigo-600">
            Email Recovery
          </button>
          <button type="button" onclick="showRecoveryMethod('code')" id="code-tab" class="recovery-tab rounded-md px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-700">
            Recovery Code
          </button>
        </nav>
      </div>

      <!-- Email Recovery Form -->
      <div id="email-recovery" class="recovery-form">
        <%= form_with url: passwords_path, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.email_field :email_address, autofocus: true, autocomplete: "username", 
                  placeholder: "Enter your email address", 
                  class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">
              We'll send you instructions to reset your passphrase
            </p>
          </div>

          <div>
            <%= form.submit "Send reset instructions", class: "flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
          </div>
        <% end %>
      </div>

      <!-- Recovery Code Form -->
      <div id="code-recovery" class="recovery-form hidden">
        <%= form_with url: passwords_path, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :recovery_code, "Recovery code", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :recovery_code, 
                  placeholder: "Enter your recovery code", 
                  class: "block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm font-mono" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">
              The recovery code was provided when you created your account
            </p>
          </div>

          <div>
            <%= form.submit "Reset passphrase", class: "flex w-full justify-center rounded-md border border-transparent bg-purple-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" %>
          </div>
        <% end %>

        <div class="mt-4 rounded-md bg-yellow-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">
                Important
              </h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p>Using your recovery code will generate a new passphrase. Your old passphrase will no longer work.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        function showRecoveryMethod(method) {
          // Hide all forms
          document.querySelectorAll('.recovery-form').forEach(form => {
            form.classList.add('hidden');
          });
          
          // Remove active class from all tabs
          document.querySelectorAll('.recovery-tab').forEach(tab => {
            tab.classList.remove('active', 'text-white', 'bg-indigo-600');
            tab.classList.add('text-gray-500', 'hover:text-gray-700');
          });
          
          // Show selected form
          document.getElementById(method + '-recovery').classList.remove('hidden');
          
          // Activate selected tab
          const activeTab = document.getElementById(method + '-tab');
          activeTab.classList.add('active', 'text-white', 'bg-indigo-600');
          activeTab.classList.remove('text-gray-500', 'hover:text-gray-700');
          
          // Focus first field
          const firstInput = document.querySelector('#' + method + '-recovery input[type="email"], #' + method + '-recovery input[type="text"]');
          if (firstInput) {
            firstInput.focus();
          }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
          showRecoveryMethod('email');
        });
      </script>

      <div class="mt-6">
        <div class="text-center">
          <%= link_to "Back to sign in", new_session_path, class: "text-sm text-indigo-600 hover:text-indigo-500 font-medium" %>
        </div>
      </div>
    </div>
  </div>
</div>