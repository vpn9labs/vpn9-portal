<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        <%= @plan.name %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        <%= @plan.description %>
      </p>
    </div>
    
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Price</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @plan.display_price %>
          </dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Duration</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @plan.duration_days %> days
          </dd>
        </div>
        <% if @plan.features.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Features</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <ul class="border border-gray-200 rounded-md divide-y divide-gray-200">
                <% @plan.features.each do |feature| %>
                  <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm">
                    <div class="w-0 flex-1 flex items-center">
                      <span class="ml-2 flex-1 w-0 truncate">
                        <%= feature %>
                      </span>
                    </div>
                  </li>
                <% end %>
              </ul>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>

    <% if @available_cryptos.present? && !@available_cryptos.key?('error') %>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <h4 class="text-lg font-medium text-gray-900 mb-4">Select Payment Method</h4>
        <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4">
          <% @available_cryptos.each do |symbol, details| %>
            <% next if symbol == 'error' %>
            <%= link_to new_plan_payment_path(@plan, crypto: symbol.downcase), 
                class: "relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500" do %>
              <div class="flex-1 min-w-0">
                <span class="absolute inset-0" aria-hidden="true"></span>
                <p class="text-sm font-medium text-gray-900">
                  <%= details.is_a?(Hash) ? (details['name'] || symbol) : symbol %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= symbol.upcase %>
                </p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <div class="text-center">
          <p class="text-sm text-gray-500">
            Payment methods are temporarily unavailable. Please try again later.
          </p>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6">
    <%= link_to "â† Back to Plans", plans_path, class: "text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
