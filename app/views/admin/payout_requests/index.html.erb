<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Payout Requests</h1>
      <p class="mt-2 text-sm text-gray-700">Manage affiliate payout requests</p>
    </div>
  </div>

  <!-- Stats -->
  <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Pending Requests</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">
          <%= @stats[:pending_count] %>
        </dd>
        <dd class="mt-1 text-sm text-gray-500">
          $<%= '%.2f' % @stats[:pending_amount] %> total
        </dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Approved Awaiting Payment</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">
          <%= @stats[:approved_count] %>
        </dd>
        <dd class="mt-1 text-sm text-gray-500">
          $<%= '%.2f' % @stats[:approved_amount] %> total
        </dd>
      </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Paid This Month</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">
          $<%= '%.2f' % @stats[:completed_this_month] %>
        </dd>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="mt-8 flex flex-wrap gap-2">
    <% %w[pending approved processing completed failed cancelled all].each do |status| %>
      <%= link_to status.humanize,
          admin_payout_requests_path(status: status),
          class: "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium #{@status_filter == status ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
    <% end %>
  </div>

  <!-- Payouts table -->
  <div class="mt-8 overflow-hidden shadow border border-gray-200 md:rounded-lg">
    <%= form_with url: bulk_approve_admin_payout_requests_path, method: :post, local: true do |f| %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
              <% if @status_filter == 'pending' %>
                Select
              <% end %>
            </th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">ID</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Affiliate</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Amount</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Method</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Requested</th>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @payouts.each do |payout| %>
            <tr>
              <td class="whitespace-nowrap px-3 py-4 text-sm">
                <% if payout.pending? %>
                  <%= check_box_tag "payout_ids[]", payout.id, false, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                <% end %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                #<%= payout.id %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm">
                <div>
                  <div class="font-medium text-gray-900">
                    <%= payout.affiliate.name || payout.affiliate.code %>
                  </div>
                  <div class="text-gray-500"><%= payout.affiliate.email %></div>
                </div>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                <span class="font-medium">$<%= '%.2f' % payout.amount %></span>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <%= payout.payout_method.upcase %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm">
                <% case payout.status %>
                <% when 'pending' %>
                  <span class="inline-flex rounded-full bg-yellow-100 px-2 text-xs font-semibold leading-5 text-yellow-800">
                    Pending
                  </span>
                <% when 'approved' %>
                  <span class="inline-flex rounded-full bg-blue-100 px-2 text-xs font-semibold leading-5 text-blue-800">
                    Approved
                  </span>
                <% when 'processing' %>
                  <span class="inline-flex rounded-full bg-indigo-100 px-2 text-xs font-semibold leading-5 text-indigo-800">
                    Processing
                  </span>
                <% when 'completed' %>
                  <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">
                    Completed
                  </span>
                <% when 'failed' %>
                  <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">
                    Failed
                  </span>
                <% when 'cancelled' %>
                  <span class="inline-flex rounded-full bg-gray-100 px-2 text-xs font-semibold leading-5 text-gray-800">
                    Cancelled
                  </span>
                <% end %>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <%= payout.created_at.strftime("%b %d, %Y") %>
              </td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                <div class="flex justify-end gap-2">
                  <%= link_to "View", admin_payout_request_path(payout), 
                      class: "text-indigo-600 hover:text-indigo-900" %>
                  
                  <% if payout.pending? %>
                    <%= button_to "Approve", 
                        approve_admin_payout_request_path(payout),
                        method: :post,
                        class: "text-green-600 hover:text-green-900" %>
                    <%= button_to "Reject", 
                        reject_admin_payout_request_path(payout),
                        method: :post,
                        data: { confirm: "Are you sure?" },
                        class: "text-red-600 hover:text-red-900" %>
                  <% elsif payout.approved? %>
                    <%= button_to "Process Payment", 
                        process_payment_admin_payout_request_path(payout),
                        method: :post,
                        data: { confirm: "Process payment for $#{'%.2f' % payout.amount}?" },
                        class: "text-green-600 hover:text-green-900" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <% if @status_filter == 'pending' && @payouts.any? %>
        <div class="bg-gray-50 px-4 py-3 sm:px-6">
          <%= f.submit "Bulk Approve Selected", 
              class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @payouts.respond_to?(:total_pages) %>
    <div class="mt-4">
      <%= paginate @payouts %>
    </div>
  <% end %>
</div>