  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Edit Subscription Plan</h1>
    <p class="text-gray-600 mt-2">Update the details of <%= @plan.name %></p>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <%= render 'form', plan: @plan %>
  </div>

  <% if !@plan.can_be_deleted? %>
    <div class="mt-4 bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded">
      <strong class="font-bold">Note:</strong> This plan has <%= @plan.active_subscriptions_count %> active subscriptions and cannot be deleted. You can deactivate it to prevent new subscriptions.
    </div>
  <% end %>
