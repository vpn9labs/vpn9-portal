  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Subscription Plans</h1>
    <%= link_to "New Plan", new_admin_plan_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="overflow-x-auto shadow border border-gray-200 sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Device Limit</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active Subs</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @plans.each do |plan| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to plan.name, admin_plan_path(plan), class: "text-blue-600 hover:text-blue-900 font-medium" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= plan.display_price %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= plan.display_duration %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                <%= plan.display_device_limit %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                <%= plan.active_subscriptions_count %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if plan.active? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Active
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Inactive
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "Edit", edit_admin_plan_path(plan), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
              <% if plan.can_be_deleted? %>
                <%= link_to "Delete", admin_plan_path(plan), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                    class: "text-red-600 hover:text-red-900" %>
              <% else %>
                <span class="text-gray-400" title="Cannot delete plan with active subscriptions">Delete</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @plans.empty? %>
      <div class="text-center py-8 text-gray-500">
        No plans found. <%= link_to "Create one", new_admin_plan_path, class: "text-blue-600 hover:text-blue-900" %>
      </div>
    <% end %>
  </div>
