<%= form_with(model: [:admin, plan], local: true) do |form| %>
  <% if plan.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <strong class="font-bold">Validation errors:</strong>
      <ul class="list-disc list-inside">
        <% plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "e.g., Basic Plan" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Brief description of the plan" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :price, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.number_field :price, step: 0.01, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "9.99" %>
      </div>

      <div>
        <%= form.label :currency, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :currency, options_for_select([["USD", "USD"], ["EUR", "EUR"], ["GBP", "GBP"], ["BTC", "BTC"], ["ETH", "ETH"]], plan.currency), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :lifetime, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="flex items-center">
          <%= form.check_box :lifetime, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded", id: "plan_lifetime" %>
          <label for="plan_lifetime" class="ml-2 text-sm text-gray-700">
            Lifetime plan (one-time payment)
          </label>
        </div>

        <div id="duration-fields" class="mt-4 <%= 'hidden' if plan.lifetime? %>">
          <%= form.label :duration_days, "Duration (days)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :duration_days, options_for_select([
            ["Weekly (7 days)", 7],
            ["Monthly (30 days)", 30],
            ["Quarterly (90 days)", 90],
            ["Yearly (365 days)", 365],
            ["Custom", ""]
          ], plan.duration_days), { prompt: "Select duration" }, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
          "data-duration-select": true %>
          
          <div id="custom-duration" class="mt-2 <%= 'hidden' unless ![7, 30, 90, 365].include?(plan.duration_days) %>">
            <%= form.number_field :duration_days, min: 1, max: 730, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                placeholder: "Enter custom days",
                "data-custom-duration": true,
                value: ![7, 30, 90, 365].include?(plan.duration_days) ? plan.duration_days : "" %>
          </div>
        </div>
      </div>

      <div>
        <%= form.label :device_limit, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :device_limit, options_for_select([
          ["1 Device", 1],
          ["3 Devices", 3],
          ["5 Devices", 5],
          ["10 Devices", 10],
          ["Unlimited (100)", 100]
        ], plan.device_limit), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>

    <div>
      <%= form.label :active, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex items-center">
        <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <label for="plan_active" class="ml-2 text-sm text-gray-700">
          Plan is active and available for purchase
        </label>
      </div>
    </div>

    <div class="flex justify-end space-x-3 pt-4">
      <%= link_to "Cancel", admin_plans_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const lifetimeCheckbox = document.getElementById('plan_lifetime');
    const durationFields = document.getElementById('duration-fields');
    const durationSelect = document.querySelector('[data-duration-select]');
    const customDurationDiv = document.getElementById('custom-duration');
    const customDurationInput = document.querySelector('[data-custom-duration]');
    
    function toggleDurationFields() {
      if (!lifetimeCheckbox) return;
      if (lifetimeCheckbox.checked) {
        durationFields?.classList.add('hidden');
        if (customDurationInput) customDurationInput.required = false;
      } else {
        durationFields?.classList.remove('hidden');
      }
    }

    toggleDurationFields();
    lifetimeCheckbox?.addEventListener('change', toggleDurationFields);

    if (durationSelect) {
      durationSelect.addEventListener('change', function() {
        if (this.value === '') {
          customDurationDiv.classList.remove('hidden');
          customDurationInput.required = true;
        } else {
          customDurationDiv.classList.add('hidden');
          customDurationInput.required = false;
          customDurationInput.value = '';
        }
      });
    }
  });
</script>
