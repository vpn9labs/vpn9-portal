  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold text-gray-900"><%= @plan.name %></h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_admin_plan_path(@plan), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Plans", admin_plans_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Plan Details</h2>
      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="text-lg"><%= @plan.name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="text-lg"><%= @plan.description || "No description" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Price</dt>
          <dd class="text-lg font-semibold"><%= @plan.display_price %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Duration</dt>
          <dd class="text-lg">
            <%= @plan.display_duration %>
            <% unless @plan.lifetime? %>
              (<%= @plan.duration_days %> days)
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Device Limit</dt>
          <dd class="text-lg">
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
              <%= @plan.display_device_limit %>
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="text-lg">
            <% if @plan.active? %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Active
              </span>
            <% else %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                Inactive
              </span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Statistics</h2>
      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Active Subscriptions</dt>
          <dd class="text-2xl font-bold text-blue-600"><%= @plan.active_subscriptions_count %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Revenue</dt>
          <dd class="text-2xl font-bold text-green-600"><%= number_to_currency(@plan.total_revenue) %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Created At</dt>
          <dd class="text-lg"><%= @plan.created_at.strftime("%B %d, %Y") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="text-lg"><%= @plan.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <% if @plan.features.present? && @plan.features.any? %>
    <div class="bg-white shadow-md rounded-lg p-6 mt-6">
      <h2 class="text-xl font-semibold mb-4">Features</h2>
      <ul class="list-disc list-inside space-y-2">
        <% @plan.features.each do |key, value| %>
          <li><strong><%= key.humanize %>:</strong> <%= value %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-6 flex justify-end space-x-2">
    <% if @plan.can_be_deleted? %>
      <%= link_to "Delete Plan", admin_plan_path(@plan), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this plan?" }, 
          class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    <% else %>
      <button disabled class="bg-gray-300 text-gray-500 font-bold py-2 px-4 rounded cursor-not-allowed" title="Cannot delete plan with active subscriptions">
        Delete Plan
      </button>
    <% end %>
  </div>
