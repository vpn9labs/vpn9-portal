<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Affiliates</h1>
      <p class="mt-2 text-sm text-gray-700">Manage affiliate partners and their commissions</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Add Affiliate", new_admin_affiliate_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <div class="flex items-center">
        <div class="flex-1">
          <dt class="text-sm font-medium text-gray-500">Total Affiliates</dt>
          <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_affiliates %></dd>
        </div>
      </div>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <div class="flex items-center">
        <div class="flex-1">
          <dt class="text-sm font-medium text-gray-500">Active Affiliates</dt>
          <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @active_affiliates %></dd>
        </div>
      </div>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <div class="flex items-center">
        <div class="flex-1">
          <dt class="text-sm font-medium text-gray-500">Total Referrals</dt>
          <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_referrals %></dd>
        </div>
      </div>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <div class="flex items-center">
        <div class="flex-1">
          <dt class="text-sm font-medium text-gray-500">Total Commissions</dt>
          <dd class="mt-1 text-3xl font-semibold text-gray-900">$<%= number_with_delimiter(@total_commissions.to_i) %></dd>
        </div>
      </div>
    </div>
  </div>

  <!-- Affiliates Table -->
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow border border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Affiliate</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Code</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Rate</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Clicks</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Referrals</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Conv. Rate</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Earnings</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @affiliates.each do |affiliate| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                    <div>
                      <div class="font-medium text-gray-900"><%= affiliate.name || "Unnamed" %></div>
                      <div class="text-gray-500"><%= affiliate.email %></div>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <code class="bg-gray-100 px-2 py-1 rounded"><%= affiliate.code %></code>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <%= affiliate.commission_rate %>%
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <%= number_with_delimiter(affiliate.total_clicks) %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <%= affiliate.referrals.count %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    <%= affiliate.conversion_rate %>%
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
                    $<%= number_with_delimiter(affiliate.lifetime_earnings.to_i) %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm">
                    <% if affiliate.active? %>
                      <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">Active</span>
                    <% elsif affiliate.suspended? %>
                      <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">Suspended</span>
                    <% else %>
                      <span class="inline-flex rounded-full bg-gray-100 px-2 text-xs font-semibold leading-5 text-gray-800">Pending</span>
                    <% end %>
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <%= link_to "View", admin_affiliate_path(affiliate), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                    <%= link_to "Edit", edit_admin_affiliate_path(affiliate), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <% if @affiliates.respond_to?(:current_page) %>
    <div class="mt-6">
      <%= paginate @affiliates %>
    </div>
  <% end %>
</div>