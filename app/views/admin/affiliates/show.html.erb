<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">
        <%= @affiliate.name || "Affiliate" %>
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        Code: <code class="bg-gray-100 px-2 py-1 rounded"><%= @affiliate.code %></code>
      </p>
    </div>
    <div class="mt-4 sm:mt-0 space-x-3">
      <%= link_to "Edit", edit_admin_affiliate_path(@affiliate), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= button_to @affiliate.active? ? "Suspend" : "Activate", 
                    toggle_status_admin_affiliate_path(@affiliate), 
                    method: :post,
                    class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white #{@affiliate.active? ? 'bg-red-600 hover:bg-red-700' : 'bg-green-600 hover:bg-green-700'} focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <%# Fraud Indicators %>
  <% if @fraud_indicators.any? %>
    <div class="mt-6 bg-yellow-50 border-l-4 border-yellow-400 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Fraud Detection Alerts</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @fraud_indicators.each do |indicator| %>
                <li class="<%= indicator[:type] == :alert ? 'text-red-700 font-semibold' : '' %>">
                  <%= indicator[:message] %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Performance Metrics %>
  <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Total Clicks</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900">
        <%= number_with_delimiter(@metrics[:total_clicks]) %>
      </dd>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Conversions</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900">
        <%= @metrics[:converted_referrals] %>
      </dd>
      <dd class="text-sm text-gray-500">
        <%= @metrics[:conversion_rate] %>% rate
      </dd>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Lifetime Earnings</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900">
        $<%= number_with_delimiter(@metrics[:lifetime_earnings].to_i) %>
      </dd>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Pending Balance</dt>
      <dd class="mt-1 text-3xl font-semibold text-green-600">
        $<%= number_with_delimiter(@metrics[:pending_balance].to_i) %>
      </dd>
    </div>
  </div>

  <%# Details Sections %>
  <div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-2">
    <%# Affiliate Details %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Affiliate Details</h3>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @affiliate.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <% if @affiliate.active? %>
                <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">Active</span>
              <% elsif @affiliate.suspended? %>
                <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">Suspended</span>
              <% else %>
                <span class="inline-flex rounded-full bg-gray-100 px-2 text-xs font-semibold leading-5 text-gray-800">Pending</span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Commission Rate</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @affiliate.commission_rate %>%</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Cookie Duration</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @affiliate.cookie_duration_days %> days</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Payout Currency</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @affiliate.payout_currency&.upcase || "Not set" %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Min Payout</dt>
            <dd class="mt-1 text-sm text-gray-900">$<%= @affiliate.minimum_payout_amount %></dd>
          </div>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Payout Address</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono break-all">
              <%= @affiliate.payout_address || "Not set" %>
            </dd>
          </div>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Referral Link</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono break-all bg-gray-50 p-2 rounded">
              <%= @affiliate.referral_link %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <%# Recent Activity %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Activity</h3>
        
        <%# Recent Clicks %>
        <div class="mb-6">
          <h4 class="text-sm font-medium text-gray-700 mb-2">Recent Clicks</h4>
          <div class="space-y-2">
            <% @recent_clicks.first(5).each do |click| %>
              <div class="text-xs text-gray-600">
                <%= click.created_at.strftime("%m/%d %H:%M") %> - 
                <%= click.landing_page&.truncate(50) || "Homepage" %>
              </div>
            <% end %>
            <% if @recent_clicks.empty? %>
              <div class="text-sm text-gray-500">No recent clicks</div>
            <% end %>
          </div>
        </div>
        
        <%# Recent Referrals %>
        <div class="mb-6">
          <h4 class="text-sm font-medium text-gray-700 mb-2">Recent Referrals</h4>
          <div class="space-y-2">
            <% @recent_referrals.first(5).each do |referral| %>
              <div class="text-xs text-gray-600">
                <%= referral.created_at.strftime("%m/%d %H:%M") %> - 
                User #<%= referral.user_id %>
                <% if referral.converted? %>
                  <span class="text-green-600">✓ Converted</span>
                <% end %>
              </div>
            <% end %>
            <% if @recent_referrals.empty? %>
              <div class="text-sm text-gray-500">No referrals yet</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Commissions Table %>
  <div class="mt-8">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Commissions</h3>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payment ID</th>
            <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_commissions.each do |commission| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= commission.created_at.strftime("%Y-%m-%d") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                $<%= commission.amount %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case commission.status %>
                <% when "pending" %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                <% when "approved" %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Approved</span>
                <% when "paid" %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Paid</span>
                <% when "cancelled" %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Cancelled</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                #<%= commission.payment_id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", admin_commission_path(commission), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
          <% if @recent_commissions.empty? %>
            <tr>
              <td colspan="5" class="px-6 py-4 text-sm text-gray-500 text-center">No commissions yet</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%# Action Buttons %>
  <div class="mt-8 flex justify-between">
    <%= link_to "← Back to Affiliates", admin_affiliates_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
    <div class="space-x-3">
      <%= link_to "View Analytics", admin_affiliate_analytics_path(@affiliate), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <% if @affiliate.pending_balance > @affiliate.minimum_payout_amount %>
        <%= link_to "Process Payout", new_admin_payout_path(affiliate_id: @affiliate.id), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
      <% end %>
    </div>
  </div>
</div>
