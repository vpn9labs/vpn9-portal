<div class="mb-8">
  <h1 class="text-2xl font-semibold text-gray-900">Edit User</h1>
</div>

<div class="bg-white shadow overflow-hidden rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <%= form_with model: @user, url: admin_user_path(@user), local: true do |form| %>
      <% if @user.errors.any? %>
        <div class="mb-4 rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There were <%= pluralize(@user.errors.count, "error") %> with your submission
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-6 gap-6">
        <div class="col-span-6 sm:col-span-3">
          <%= form.label :email_address, class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :email_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>

        <div class="col-span-6 sm:col-span-3">
          <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :status, options_for_select(User.statuses.map {|key, value| [key.humanize, key]}, @user.status), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <%= link_to "Cancel", admin_user_path(@user), class: "text-sm text-gray-600 hover:text-gray-900" %>
        <%= form.submit "Update User", class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
</div>