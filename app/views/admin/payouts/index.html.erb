<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Payouts</h1>
      <p class="mt-2 text-sm text-gray-700">Process affiliate commission payouts</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Export Payouts", export_admin_payouts_path(format: :csv), 
          class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
    </div>
  </div>

  <!-- Payout Stats -->
  <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Total Pending</dt>
      <dd class="mt-1 text-3xl font-semibold text-yellow-600">
        $<%= number_with_delimiter(@payout_stats[:total_pending].to_i) %>
      </dd>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Affiliates Awaiting</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900">
        <%= @payout_stats[:affiliates_awaiting] %>
      </dd>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Paid This Month</dt>
      <dd class="mt-1 text-3xl font-semibold text-green-600">
        $<%= number_with_delimiter(@payout_stats[:paid_this_month].to_i) %>
      </dd>
    </div>
    
    <div class="bg-white px-4 py-5 shadow rounded-lg">
      <dt class="text-sm font-medium text-gray-500">Total Paid</dt>
      <dd class="mt-1 text-3xl font-semibold text-gray-900">
        $<%= number_with_delimiter(@payout_stats[:paid_total].to_i) %>
      </dd>
    </div>
  </div>

  <!-- Affiliates Ready for Payout -->
  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Affiliates Ready for Payout</h2>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Affiliate
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Pending Balance
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Min Payout
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Approved Commissions
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Payout Method
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @affiliates_with_balance.each do |affiliate| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div>
                  <div class="text-sm font-medium text-gray-900">
                    <%= affiliate.name || "Unnamed" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= affiliate.code %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 font-semibold">
                  $<%= number_with_delimiter(affiliate.pending_balance.to_i) %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                $<%= affiliate.minimum_payout_amount %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= affiliate.commissions.approved.count %> commissions
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case affiliate.payout_currency %>
                <% when "btc" %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-orange-100 text-orange-800">
                    Bitcoin
                  </span>
                <% when "eth" %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                    Ethereum
                  </span>
                <% when "bank" %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    Bank Transfer
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    Manual
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Process Payout", 
                    new_admin_payout_path(affiliate_id: affiliate.id),
                    class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
              </td>
            </tr>
          <% end %>
          
          <% if @affiliates_with_balance.empty? %>
            <tr>
              <td colspan="6" class="px-6 py-4 text-sm text-gray-500 text-center">
                No affiliates have reached the minimum payout threshold
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Recent Payouts -->
  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Recent Payouts</h2>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Date
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Affiliate
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Amount
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Method
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Transaction ID
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_payouts.each do |payout| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= payout.paid_at&.strftime("%Y-%m-%d %H:%M") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div>
                  <div class="text-sm font-medium text-gray-900">
                    <%= payout.affiliate.name || "Unnamed" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= payout.affiliate.code %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                $<%= payout.amount %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= payout.affiliate.payout_currency&.upcase || "Manual" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                <%= payout.payout_transaction_id&.truncate(20) || "N/A" %>
              </td>
            </tr>
          <% end %>
          
          <% if @recent_payouts.empty? %>
            <tr>
              <td colspan="5" class="px-6 py-4 text-sm text-gray-500 text-center">
                No payouts processed yet
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>