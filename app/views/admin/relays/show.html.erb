  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold text-gray-900"><%= @relay.name %></h1>
    <div>
      <%= link_to "Edit", edit_admin_relay_path(@relay), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
      <%= link_to "Back to Relays", admin_relays_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Relay Details</h2>
    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Name</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @relay.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1">
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
            <%= @relay.active? ? 'bg-green-100 text-green-800' : @relay.maintenance? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
            <%= @relay.status %>
          </span>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Location</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= link_to admin_location_path(@relay.location), 
              class: "text-blue-600 hover:text-blue-900" do %>
            <%= @relay.location.city %>, <%= @relay.location.country_name %> <%= @relay.location.country_flag %>
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Hostname</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @relay.hostname %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">IPv4 Address</dt>
        <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @relay.ipv4_address %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">IPv6 Address</dt>
        <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @relay.ipv6_address.presence || "Not configured" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Port</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @relay.port %></dd>
      </div>
    </dl>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">WireGuard Configuration</h2>
    <div>
      <dt class="text-sm font-medium text-gray-500 mb-2">Public Key</dt>
      <dd class="text-sm text-gray-900 font-mono bg-gray-50 p-3 rounded break-all">
        <%= @relay.public_key %>
      </dd>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <div>
      <%= link_to "Delete Relay", admin_relay_path(@relay), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this relay?" },
          class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
