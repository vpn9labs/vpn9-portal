<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Relays</h1>
    <%= link_to "New Relay", new_admin_relay_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="overflow-hidden shadow border border-gray-200 sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hostname</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IPv4</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Port</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @relays.each do |relay| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to relay.name, admin_relay_path(relay), class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= relay.hostname %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to admin_location_path(relay.location), 
                  class: "text-blue-600 hover:text-blue-900" do %>
                <%= relay.location.city %>, <%= relay.location.country_flag %> <%= relay.location.country_code.upcase %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= relay.ipv4_address %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= relay.port %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= relay.active? ? 'bg-green-100 text-green-800' : relay.maintenance? ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                <%= relay.status %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "Edit", edit_admin_relay_path(relay), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
              <%= link_to "Delete", admin_relay_path(relay), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                  class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @relays.empty? %>
      <div class="text-center py-8 text-gray-500">
        No relays found. <%= link_to "Create one", new_admin_relay_path, class: "text-blue-600 hover:text-blue-900" %>
      </div>
    <% end %>
  </div>
</div>