<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Launch Notification Details</h1>
      <p class="mt-2 text-sm text-gray-700">
        Detailed information about this launch notification signup.
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Back to List", admin_launch_notifications_path, class: "inline-flex items-center justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>

  <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Signup Information
      </h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Email Address</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @launch_notification.email %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Signed Up At</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @launch_notification.created_at.strftime("%B %d, %Y at %I:%M %p %Z") %>
            <span class="text-gray-500">(<%= time_ago_in_words(@launch_notification.created_at) %> ago)</span>
          </dd>
        </div>
        
        <% if @launch_notification.metadata.present? %>
          <% metadata = @launch_notification.metadata %>
          
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">IP Address</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= metadata['ip_address'] || 'Not recorded' %>
            </dd>
          </div>
          
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">User Agent</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <% if metadata['user_agent'].present? %>
                <div class="text-xs font-mono bg-gray-100 p-2 rounded break-all">
                  <%= metadata['user_agent'] %>
                </div>
              <% else %>
                <span class="text-gray-500">Not recorded</span>
              <% end %>
            </dd>
          </div>
          
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Referrer</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= metadata['referrer'] || 'Direct visit' %>
            </dd>
          </div>
          
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">UTM Parameters</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <% if metadata['utm_source'].present? || metadata['utm_campaign'].present? || metadata['utm_medium'].present? %>
                <dl class="grid grid-cols-1 gap-x-4 gap-y-2">
                  <% if metadata['utm_source'].present? %>
                    <div>
                      <span class="font-medium">Source:</span> <%= metadata['utm_source'] %>
                    </div>
                  <% end %>
                  <% if metadata['utm_campaign'].present? %>
                    <div>
                      <span class="font-medium">Campaign:</span> <%= metadata['utm_campaign'] %>
                    </div>
                  <% end %>
                  <% if metadata['utm_medium'].present? %>
                    <div>
                      <span class="font-medium">Medium:</span> <%= metadata['utm_medium'] %>
                    </div>
                  <% end %>
                </dl>
              <% else %>
                <span class="text-gray-500">No UTM parameters</span>
              <% end %>
            </dd>
          </div>
          
          <% if metadata.keys.any? { |k| !%w[ip_address user_agent referrer utm_source utm_campaign utm_medium].include?(k) } %>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Additional Data</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <pre class="text-xs font-mono bg-gray-100 p-2 rounded"><%= JSON.pretty_generate(metadata.except('ip_address', 'user_agent', 'referrer', 'utm_source', 'utm_campaign', 'utm_medium')) %></pre>
              </dd>
            </div>
          <% end %>
        <% end %>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex justify-end">
    <%= link_to "Delete Signup", admin_launch_notification_path(@launch_notification), 
        method: :delete, 
        data: { confirm: "Are you sure you want to delete this signup?" },
        class: "inline-flex items-center justify-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
  </div>
</div>