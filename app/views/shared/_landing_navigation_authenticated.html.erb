<header class="absolute inset-x-0 top-0 z-50 transition-all duration-300">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="text-2xl font-bold text-white">VPN9</span>
      <% end %>
    </div>
    
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-400" onclick="toggleMobileMenu()">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to "Dashboard", root_path, class: "text-sm font-semibold leading-6 text-white hover:text-gray-300" %>
      <%= link_to "Plans", plans_path, class: "text-sm font-semibold leading-6 text-white hover:text-gray-300" %>
      <%= link_to "Devices", devices_path, class: "text-sm font-semibold leading-6 text-white hover:text-gray-300" %>
      <%= link_to "Subscription", subscriptions_path, class: "text-sm font-semibold leading-6 text-white hover:text-gray-300" %>
      <a href="https://github.com/vpn9labs" target="_blank" class="text-sm font-semibold leading-6 text-white hover:text-gray-300">
        GitHub <span aria-hidden="true">↗</span>
      </a>
    </div>
    
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-4 lg:items-center">
      <span class="text-sm text-gray-300">
        Welcome back!
      </span>
      <%= link_to "Sign Out", session_path, 
          data: { turbo_method: :delete },
          class: "rounded-md bg-red-600/10 border border-red-500/20 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-600/20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-400" %>
    </div>
  </nav>
  
  <%# Mobile menu, show/hide based on menu open state. %>
  <div class="hidden" role="dialog" aria-modal="true" id="mobile-menu">
    <%# Background backdrop %>
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-gray-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-white/10">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
          <span class="text-2xl font-bold text-white">VPN9</span>
        <% end %>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-400" onclick="toggleMobileMenu()">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/25">
          <div class="space-y-2 py-6">
            <%= link_to "Dashboard", root_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white hover:bg-gray-800" %>
            <%= link_to "Plans", plans_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white hover:bg-gray-800" %>
            <%= link_to "Devices", devices_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white hover:bg-gray-800" %>
            <%= link_to "Subscription", subscriptions_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white hover:bg-gray-800" %>
            <a href="https://github.com/vpn9labs" target="_blank" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white hover:bg-gray-800">
              GitHub <span aria-hidden="true">↗</span>
            </a>
          </div>
          <div class="py-6">
            <p class="mb-4 text-sm text-gray-400">Welcome back!</p>
            <%= link_to "Sign Out", session_path, 
                data: { turbo_method: :delete },
                class: "-mx-3 block rounded-lg bg-red-600/20 border border-red-500/20 px-3 py-2.5 text-center text-base font-semibold leading-7 text-white hover:bg-red-600/30" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    if (menu.classList.contains('hidden')) {
      menu.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    } else {
      menu.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }
  
  // Add scroll effect to navigation
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.querySelector('header');
    if (header) {
      window.addEventListener('scroll', function() {
        if (window.scrollY > 50) {
          header.classList.add('bg-gray-900/95', 'backdrop-blur-md', 'border-b', 'border-gray-800');
          header.classList.remove('absolute');
          header.classList.add('fixed');
        } else {
          header.classList.remove('bg-gray-900/95', 'backdrop-blur-md', 'border-b', 'border-gray-800');
          header.classList.add('absolute');
          header.classList.remove('fixed');
        }
      });
    }
  });
</script>
